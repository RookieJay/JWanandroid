<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_article_new"
        android:textColor="@color/text_color_second"
        android:padding="5dp"
        android:layout_margin="@dimen/dp_5"
        android:gravity="center"
        android:theme="@style/RippleButton"
        android:clickable="true"
        android:focusable="true"
        tools:text="@string/app_name"
        android:id="@+id/tvSearchHis"/>
    
    <ImageView
        android:id="@+id/ivDel"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_delete_red"
        android:layout_alignTop="@id/tvSearchHis"
        android:layout_alignEnd="@id/tvSearchHis"
        android:layout_marginTop="-5dp"
        android:layout_marginEnd="-5dp"
        android:visibility="gone"
        tools:visibility="visible"/>
    
</RelativeLayout>
